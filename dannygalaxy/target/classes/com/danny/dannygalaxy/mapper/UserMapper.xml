<?xml version="1.0" encoding="UTF-8"?>

<!-- 문서 유형 : mapper -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.danny.dannygalaxy.mapper.UserMapper">

	<!-- 아이디 중복 체크 -->
	<select id="checkUserIdExist" parameterType="String" resultType="String">
		SELECT (case when count(*) = 1 then 'unusable' else 'usable' end) RESULT
		  FROM schatz.tbl_users 
		 WHERE userId = #{userId}
	</select>

	<!-- 회원가입 -->
	<insert id="insertUser">
	INSERT INTO schatz.tbl_users
		VALUES  (user_seq.nextval,#{userName},#{userId},#{userPw})
	</insert>	
	
	<!-- 로그인 -->
	<select id="selectLoginUser" resultType="com.danny.dannygalaxy.domain.UserVO">
	SELECT userIdx , userName
		FROM schatz.tbl_users
		WHERE userId = #{userId} and userPw = #{userPw}
	</select>
	
	
</mapper>